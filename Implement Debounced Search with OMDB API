<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Debounced Movie Search</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background-color: #f9f9f9;
    }
    input {
      width: 300px;
      padding: 10px;
      font-size: 16px;
    }
    #results {
      margin-top: 20px;
    }
    .movie {
      background: white;
      margin: 10px 0;
      padding: 10px;
      border-left: 4px solid #007bff;
    }
  </style>
</head>
<body>

  <h2>ðŸŽ¬ Debounced Movie Search</h2>
  <input type="text" id="search" placeholder="Type movie name...">
  <div id="results"></div>

  <script>
    const input = document.getElementById('search');
    const resultsDiv = document.getElementById('results');
    let debounceTimeout;

    const fetchMovies = async (query) => {
      try {
        const res = await fetch(`https://www.omdbapi.com/?apikey=b10f50e7&s=${encodeURIComponent(query)}`);
        const data = await res.json();
        resultsDiv.innerHTML = '';

        if (data.Response === 'True') {
          data.Search.forEach(movie => {
            const div = document.createElement('div');
            div.className = 'movie';
            div.textContent = `${movie.Title} (${movie.Year})`;
            resultsDiv.appendChild(div);
          });
        } else {
          resultsDiv.innerHTML = `<p>No results found</p>`;
        }
      } catch (err) {
        resultsDiv.innerHTML = `<p>Error fetching data</p>`;
      }
    };

    input.addEventListener('input', () => {
      clearTimeout(debounceTimeout);
      const query = input.value.trim();

      if (query === '') {
        resultsDiv.innerHTML = '';
        return;
      }

      debounceTimeout = setTimeout(() => {
        fetchMovies(query);
      }, 500);
    });
  </script>
</body>
</html>
